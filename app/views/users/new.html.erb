<% if flash[:warning] %>
    <div class="notice"><%= flash[:warning] %></div>
<% end %>

<h1>Sign Up</h1>
<%= form_for @user do |f|%>
  <%= f.label :username%><br>
  <%= f.text_field :username%><br>
  <%= f.label :password%><br>
  <%= f.password_field :password%><br>
  <%= f.submit %>
<%end%>

<p>If you meant to press the login button, I've got you:</p>
<%= button_to "Login", '/login', method: :get%>
